
<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">

      <h2>User info</h2>
      <div>
        <p><%= image_tag @user.get_profile_image(100,100)%></p>

        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th></th>
              <th><%=@user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to 'Edit', edit_user_path(@user.id)%>
        </div>
      </div>
      <div>
        <h1 class="mt-3">New book</h1>
        <%= form_with model: Book.new do |f| %>

          <div class="field">
          <h4>Title</h4>
          <%= f.text_field :title %>
          </div>

          <div class="field">
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          </div>

          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book|%>
          <tr>
            <td>
              <p><%= image_tag book.user.get_profile_image(100,100)%></p>
            </td>
            <td>
              <p><%= link_to book_user.name, book_path(book.id) %></p>
            </td>
            <td>
              <p><%= link_to book.title, book_path(book.id) %></p>
            </td>
            <td>
              <p><%= book.body %></p>
            </td>
            <td>
              <p><%= link_to 'Edit', edit_book_path(@book.id) %></p>
            </td>
            <td>
              <p><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></p>
            </td>
          </tr>
          <% end %>
  <footer>
    <p>CopyRight Infratop.inc</p>
  </footer>
        </tbody>
      </table>
    </div>
  </div>
</div>





