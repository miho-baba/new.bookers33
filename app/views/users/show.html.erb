
<h1>User info</h1>


<div>
<% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, :class => "mw50" %>
        <% else %>
         <%= image_tag 'no_image' %>
        <% end %>
 <p><%= @user.name %></p>
<% @books.each do |book|%>
 <p><%= book.title %></p>

 <p><%= book.body %></p>
<% end %>
 <p><%= image_tag 'no_image' %></p>

<%= link_to 'Edit', edit_user_path(@user.id) %>

</div>

