
<p id="notice"></p>
<div class="container">
  <div class="row">
<%= render 'books/book', user: @user %>
      <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <p><%= image_tag @user.get_profile_image(100,100)%></p>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book|%>
          <tr>
            <td>
              <p><%= book.title %></p>
            </td>
              <td>
              <p><%= book.body %></p>
            </td>
            <td>
              <p><%= link_to 'edit', edit_book_path(book.id)%></p>
            </td>
            <td>
              <p><%= link_to 'destory', book_path(book.id),method: :delete, "data-confirm" => "本当に削除しますか？" %></p>
            </td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

