
<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">

      <h2>User info</h2>
      <div>
        <p><%= image_tag @user.get_profile_image(100,100)%></p>

        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%=@user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block " do %>
          <i class="fa-solid fa-user-gear"></i>
          <% end %>
        </div>
      </div>
      <div>
        <h1 class="mt-3">New book</h1>
        <%= form_with model: Book.new do |f| %>

          <div class="form-group">
          <h4>Title</h4>
          <input class="form-control book_title" type="text" name="book[title]" id="title">
          </div>

          <div class="form-group">
          <h4>Opinion</h4>
          <textarea class="form-control book_body" name="book[body]" id="body"></textarea>
          </div>
          <div class="form-group">
          <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
        <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user|%>
          <tr>
            <td>
              <p><%= image_tag user.get_profile_image(100,100)%></p>
            </td>
            <td>
              <p><%= user.name %></p>
            </td>
            <td>
              <p><%= link_to 'Show', user_path(user.id) %></p>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

 <footer class="bg-white text-black pt-5 pb-4">
      <div class="container">
      <div class="row no-gutters">
        <div class="col-md-12">
        <div class="text-black mt-2 mb-3">
        <ul class="p-0 list-unstyled">
        <li class="text-black-100 text-center">
         CopyRight Infratop.inc
        </li>
            </ul>
          </div>
        </div>
       </div>
      </div>
