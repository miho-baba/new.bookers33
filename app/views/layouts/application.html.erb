<!DOCTYPE html>
<html>
  <head>
  <div class="container">
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://kit.fontawesome.com/e0c0e0275e.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="bg-black text-white navbar navbar-expand-lg navbar-light">
        <div class="container">
  <%= link_to "Bookers", root_path %>
  <ul class="navbar-nav ml-auto">
  <% if user_signed_in? %>
    <li class="nav-item">
      <%= link_to "Bookers", root_path %>
    </li>
    <li class="nav-item">
      <%= link_to 'Bookers', users_path(current_user.id) %>
    </li>
    <li class="nav-item">
      <%= link_to "Home", user_path(current_user) %>
    </li>
    <li class="nav-item">
      <%= link_to "Users", users_path %>
    </li>
    <li class="nav-item">
      <%= link_to "Books", books_path %>
    </li>
    <li class="nav-item">
      <%= link_to "Log out", destroy_user_session_path, method: :delete %>
    </li>
  <% else %>
    <li class="nav-item">
      <%= link_to "Home", root_path %>
    </li>
    <li class="nav-item">
      <%= link_to "About", homes_about_path %>
    </li>
    <li class="nav-item">
      <%= link_to "Sign up", new_user_registration_path %>
    </li>
    <li class="nav-item">
      <%= link_to "Log in", new_user_session_path %>
    </li>
    <% end %>
    </ul>
      </div>
    </div>
  </nav>
</header>
  <main class="mb-auto">
    <%= yield %>
    </main>
     <footer class="bg-white text-black">
      <div class="container">
      <div class="row no-gutters">
        <div class="col-md-8">
        <div class="text-black mt-2 mb-3">
        <ul class="p-0 list-unstyled">
        <li>
          <a href="" title="License informations" class="text-black-50">CopyRight Infratop.inc</a>
        </li>
            </ul>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
