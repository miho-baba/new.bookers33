<!DOCTYPE html>
<html>
  <head>

    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/e0c0e0275e.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-dark bg-dark navbar-expand-lg navbar-light">
      <div class="container">
    <%= link_to "Bookers", root_path, class: 'nav-link text-light' %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

  <ul class="navbar-nav ml-auto">
  <% if user_signed_in? %>

    <li class="nav-item">
      <%= link_to user_path(current_user),class: 'nav-link text-light' do %>
      <i class="fa-solid fa-house-chimney"></i>Home
      <% end %>
    <li class="nav-item">
      <%= link_to users_path,class: 'nav-link text-light' do %>
      <i class="fa-solid fa-users"></i>Users
      <% end %>
    <li class="nav-item">
      <%= link_to books_path, class: 'nav-link text-light' do %>
      <i class="fa-solid fa-book-open"></i>Books
      <% end %>
    <li class="nav-item">
      <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
      <i class="fa-solid fa-right-from-bracket"></i>Log out
       <% end %>
    </li>

  <% else %>
    <li class="nav-item">
      <%= link_to root_path, class: 'nav-link text-light' do %>
      <i class="fa-solid fa-house-chimney"></i>Home
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to homes_about_path, class: 'nav-link text-light' do %>
      <i class="fa-solid fa-link"></i>About
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
      <i class="fa-solid fa-user-plus"></i>Sign up
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
      <i class="fa-solid fa-right-to-bracket"></i>Log in
    </li>
      <% end %>
      <% end %>
    </ul>
      </div>
    </div>
  </nav>
</header>
  <main class="mb-auto">
    <%= yield %>
    </main>
     <footer class="bg-white text-black pt-5 pb-4">
      <div class="container">
      <div class="row no-gutters">
        <div class="col-md-12">
        <div class="text-black mt-2 mb-3">
        <ul class="p-0 list-unstyled">
        <li class="text-black-100 text-center">
         CopyRight Infratop.inc
        </li>
            </ul>
          </div>

      </div>
       </div>
      </div>
    </footer>
  </body>
</html>
