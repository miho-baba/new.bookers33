

  <div class="col-md-3">

      <h2>User info</h2>
      <div>
        <p><%= image_tag user.get_profile_image(100,100)%></p>

        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%=user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block " do %>
          <i class="fa-solid fa-user-gear"></i>
          <% end %>
      </div>
      <div>
        <h1 class="mt-3">New book</h1>
        <%= form_with model: Book.new do |f| %>

          <div class="form-group">
          <h4>Title</h4>
          <input class="form-control book_title" type="text" name="book[title]" id="title">
          </div>

          <div class="form-group">
          <h4>Opinion</h4>
          <textarea class="form-control book_body" name="book[body]" id="body"></textarea>
          </div>
          <div class="form-group">
          <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
          </div>
        <% end %>
      </div>
    </div>
    </div>
