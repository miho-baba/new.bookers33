

    <div class="col-md-3">

      <h2>User info</h2>
      <div>
        <p><%= image_tag user.get_profile_image(100,100)%></p>

        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th></th>
              <th><%=user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block " do %>
          <i class="fa-solid fa-user-gear"></i>
          <% end %>
      </div>
      <div>
        <h1 class="mt-3">New book</h1>
        <%= form_with model: Book.new do |f| %>

          <div class="field">
          <h4>Title</h4>
          <%= f.text_field :title %>
          </div>

          <div class="field">
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          </div>

          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>