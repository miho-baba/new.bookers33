

  <div class="col-md-3">

      <h2>User info</h2>
      <div>
        <p><%= image_tag user.get_profile_image(100,100)%></p>

        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%=user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block " do %>
          <i class="fa-solid fa-user-gear"></i>
          <% end %>
      </div>
    <div>
      <h1 class="mt-3">New book</h1>
        <%= form_with model: Book.new do |f| %>

          <div class="form-group">
          <%= f.label :Title %>
          <%= f.text_field :title, class: "form-control title" %>
          </div>

          <div class="form-group">
          <%= f.label :Opinion %>
          <%= f.text_area :body, class: "form-control opinion" %>
          </div>
          <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
    </div>
